


<br/><br/><br/><br/>




<div class="table_wrap">
      
        <div class="row" style="margin: 0 auto;">
          <br>
          <div class="col-sm-3 float-left">
            <button type="button" class="btn2" style="bottom: 0;"><%= link_to "Add a New ", new_dog_path %>
            </button>
          </div>
          <div class="col-sm-5">
            <input type="text" class="form-control" id="search_table" placeholder="search a thing...">
            <div class="tooltip">Hover over me
              <span class="tooltiptext">Tooltip text</span>
            </div>
            <span class="input-clear text-center sphover">
              <i class="fa fa-times input-clear-icon sphover"></i>
            </span>
          </div>
        </div>
        <br/><br/>
      <table class="table thing_table table-dragable" style="max-width: 950px; margin: 0 auto;">
        <thead class="thead-dark">
        <% @dogs.each do |dog| %>
          <tr>
            <td><%= link_to dog.name, dog_path(dog) %></td>
            <td class="but"><%= button_to 'Edit', edit_dog_path(dog), method: 'get'%></td>
            <td class="but"><%= button_to 'Remove', dog_path(dog), method: 'delete', data: { confirm: 'Are you sure?' } %></td>
        <% end %>
        </thead>
      </table>

      <!-- Modal -->
      <div class="modal fade" id="confirm_thing_del" tabindex="-1" role="dialog" aria-labelledby="confirm_thing_del" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
          <div class="modal-content">
            <div class="modal-close-div">
              <div class="cancel modal_close text-center" data-dismiss="modal">
                <i class="fa fa-times"></i>
              </div>
            </div>
            <div class="modal-header">
              <h5 class="modal-title text-center" id="confirm_del_title"> </h5>
            </div>
            <div class="modal-footer">
              <button type="button" class="cancel main-cancel" data-dismiss="modal">Cancel</button>
              <button type="button" class="reset" data-dismiss="modal">Delete</button>
            </div>
          </div>
        </div>
      </div>

      <!-- Modal Two -->
      <div class="modal fade" id="type_alert" tabindex="-1" role="dialog" aria-labelledby="type_alert" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
          <div class="modal-content">
            <div class="modal-close-div">
              <div class="cancel modal_close text-center" data-dismiss="modal">
                <i class="fa fa-times"></i>
              </div>
            </div>
            <div class="modal-header">
              <h5 class="modal-title text-center" id="type_alert_title"> </h5>
            </div>
            <div class="modal-footer">
              <button type="button" class="reset" data-dismiss="modal">Okay</button>
            </div>
          </div>
        </div>
      </div>

    </div>